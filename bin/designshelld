#!/usr/bin/env ruby

#command = ENV['SSH_ORIGINAL_COMMAND']
#STDERR.write "user #{user} authorized\n"

require "rubygems"
gem 'ruby-debug'
require 'ruby-debug'

#trap("SIGHUP") { abort }

$stdout.print ARGV.inspect
$stdout.print ENV.inspect

$stdout.print "\n-> "

$stdin.each_line do |line| line.chomp! "\n"

	abort if !line || line==''

	$stdout.print "You said " + line

  $stdout.print "\n-> "
end
